{
  "name": "@elvatis_com/openclaw-memory-core",
  "version": "0.1.0",
  "description": "Core utilities for OpenClaw memory plugins (redaction, local store, embeddings)",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "scan-secrets": "bash scripts/scan-secrets.sh",
    "ci": "npm run typecheck && npm run build && npm run test && npm run scan-secrets",
    "prepublishOnly": "npm run build"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "openclaw": {
    "extensions": [
      "./src/index.ts"
    ]
  }
}
